<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:padding="4dp"
    android:background="@drawable/item_corner"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/img_absent"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="0.7"
        android:padding="4dp"
        android:src="@drawable/user"
        android:scaleType="centerInside"/>
    <TextView
        android:id="@+id/nom_absent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/latolight"
        android:textColor="@color/black"
        android:gravity="start|center"
        android:text="Sadiki Zakaria"/>
    <LinearLayout
        android:id="@+id/control_membre"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_present"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/light_green"
            android:text="P"
            android:textSize="20sp"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/btn_absent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/light_red"
            android:text="A"
            android:textSize="20sp"
            android:layout_margin="2dp"/>
    </LinearLayout>
</LinearLayout>